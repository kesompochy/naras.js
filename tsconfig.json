{
  "compilerOptions": {
    "baseUrl": "./",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "lib": ["ES2022", "DOM"],
    "module": "ES2022",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "./dist/",
    "paths": {
      "~/*": ["./src/*"]
    },
    "sourceMap": true,
    "strict": true,
    "target": "ES2022",
    "declaration": true,
    "declarationMap": true,
    "types": ["vitest/globals"]
  },
  "exclude": ["node_modules", "dist"]
}
